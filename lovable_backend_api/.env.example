# Lovable Backend API - .env.example
# Copy this file to .env and adjust values for your environment.
# Ports
BACKEND_PORT=3001

# Allowed CORS origin for the frontend (adjust host if needed)
FRONTEND_ORIGIN=http://localhost:3000

# Database URL (async driver required)
# Examples:
#   SQLite (dev): sqlite+aiosqlite:///./dev.db
#   Postgres: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=sqlite+aiosqlite:///./dev.db

# Directory where the backend stores temp/export artifacts
STORAGE_DIR=./.storage

# Base URL used by backend to build preview links
PREVIEW_BASE_URL=http://localhost:3001/preview

# Secret for signing JWTs (dev placeholder; do NOT commit real secrets)
JWT_SECRET=dev-secret-change-me
